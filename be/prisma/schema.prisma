// File: prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique 
  username  String  @unique 
  password  String?
  role      String 
  createdAt DateTime @default(now())
}