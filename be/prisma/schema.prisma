datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  fullName String
  email String? @unique
  role Role //enum: Mahasiswa, Dosen, Tendik, Guest
  keycloackId String?
  createdAt DateTime @default(now())
}

enum Role {
  Mahasiswa
  Dosen
  Tendik
  Guest
}